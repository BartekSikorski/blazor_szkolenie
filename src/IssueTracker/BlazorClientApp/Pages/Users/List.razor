@page "/Users"

<h3>Hello Users!</h3>

@if (users is null)
{
    <em>Loading users...</em>
}
else
{
    <table class="striped">
        <thead>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                </tr>
            }

        </tbody>
    </table>
}