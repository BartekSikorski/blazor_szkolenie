@page "/counter"
@using BlazorClientApp.Features.Counter;
@using Fluxor.Blazor.Web.Components;
@using Fluxor;
@inherits FluxorComponent
@inject IDispatcher Dispatcher
@inject IState<CounterState> CounterState

 <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Card Title</span>
                <p>@CounterState.Value.CurrentCount</p>
        </div>
        <div class="card-action">
                <a class="waves-effect waves-light btn" @onclick="Increment">Increment</a>
        </div>
      </div>
    </div>
  </div>
            
@code {


    private async Task Increment()
    {
        // Dispatcher.Dispatch(new CounterIncrementAction());

        Dispatcher.Dispatch(new CounterIncrementByValueAction(5));
    }

    protected override async Task OnInitializedAsync()
    {
    }

 
}