<h3>Issues</h3>

@if (IssueState.Value.IsLoading)
{
    <ProgressBar />    
}
else
{
    <ul>
        <Virtualize ItemsProvider="LoadIssues" Context="issue" SpacerElement="li" OverscanCount="5">
            <li><strong>@issue.Title</strong> @issue.Description</li>
        </Virtualize>
 
        
    </ul>
}

